<p id="notice"><%= notice %></p>

<h1>Trainees</h1>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th>City</th>
      <th>Description</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @trainees.each do |trainee| %>
      <tr>
      <td> <%= trainee.Name %> </td>
      <td> <%= trainee.City %> </td>
      <td> <%= trainee.Description %> </td> 
        <td><%= link_to 'Show', trainee %></td>
        <td><%= link_to 'Edit', edit_trainee_path(trainee) %></td>
        <td><%= link_to 'Destroy', trainee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

