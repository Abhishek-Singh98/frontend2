<h1>Editing Review</h1>
<%= form_with (model :@review,local:true) do|f|%>
  <%= if @review.errors.any? %>
  <div id="error_explanation">
     <%= pluralize(@review.errors.count, "error") %>
            <h2>Prohibited this review from being updated:</h2>
            <ul>
            <% review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
    <% end %>
  <%end%>
  <p>
  <%= f.label :Gym_id %>
  <%= f.text_field :Gym_id%></br></br>
  <%= f.label :Description %>
  <%= f.text_area :Description%></br></br>
  <%= f.label :trainee_id %>
  <%= f.text_field :trainee_id%></br></br>
  </p>
  </br>
  <div class="actions">
    <%= f.update %>
  </div>
<% end %>

<%= link_to 'Show', @review %> |
<%= link_to 'Back', reviews_path %>